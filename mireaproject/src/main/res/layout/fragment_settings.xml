<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="168dp"
            android:layout_marginTop="16dp"
            android:text="Настройки" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="246dp"
            android:layout_height="42dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="48dp"
            android:text="Зацикливание аудио" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="116dp"
            android:layout_marginTop="24dp"
            android:text="Адрес страницы браузера" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="307dp"
            android:layout_height="42dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="https://developer.android.com"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="28dp"
            android:text="Текст ошибки при попытке деления на ноль" />

        <EditText
            android:id="@+id/editTextDelitNol"
            android:layout_width="251dp"
            android:layout_height="44dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Делить на ноль нельзя!"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="248dp"
            android:layout_height="149dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:text="Сохранить" />

    </LinearLayout>

</FrameLayout>